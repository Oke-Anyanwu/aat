%h3= @employee.decorate.full_name

%dl#employee-tab{ class: "tabs", data: { tab: true, options: "deep_linking: true" } }
  %dd{ class: "active" }
    %a{ href: "#basic" } Basic Info
  %dd
    %a{ href: "#leaves", id: 'leave-tab' } Leaves

.tabs-content
  .content.active#basic
    = render "basic_tab"
  .content#leaves
    = render "leaves_tab"
